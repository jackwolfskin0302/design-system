{
  "name": "@storybook/design-system",
  "version": "5.0.4",
  "description": "Storybook design system",
  "repository": {
    "type": "git",
    "url": "https://github.com/storybookjs/design-system.git"
  },
  "license": "MIT",
  "author": {
    "name": "Michael Shilman",
    "email": "michael@lab80.co"
  },
  "files": [
    "dist"
  ],
  "main": "dist/index.js",
  "scripts": {
    "build": "babel src -d dist",
    "build-docs": "build-storybook --docs",
    "build-storybook": "build-storybook",
    "lint": "eslint .",
    "lint:js": "cross-env NODE_ENV=production eslint --cache --cache-location=.cache/eslint --ext .js,.jsx,.html,.ts,.tsx,.mjs --report-unused-disable-directives",
    "lint:package": "sort-package-json",
    "release": "npm run build && ./scripts/release.sh",
    "storybook": "start-storybook -p 6006"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint-staged"
    }
  },
  "lint-staged": {
    "*.html": [
      "yarn lint:js --fix"
    ],
    "*.js": [
      "yarn lint:js --fix"
    ],
    "package.json": [
      "yarn lint:package"
    ]
  },
  "dependencies": {
    "@storybook/eslint-config-storybook": "^2.4.0",
    "@storybook/linter-config": "^2.5.0",
    "chromatic": "^4.0.2",
    "polished": "^3.6.3",
    "prismjs": "1.20.0",
    "react-modal": "^3.11.2",
    "react-popper-tooltip": "^2.11.1",
    "recompose": "^0.30.0",
    "styled-components": "^4.4.1",
    "uuid": "^3.3.3"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.6",
    "@babel/node": "^7.8.7",
    "@babel/plugin-proposal-object-rest-spread": "^7.9.6",
    "@babel/plugin-transform-runtime": "^7.9.6",
    "@babel/preset-env": "^7.9.6",
    "@babel/preset-react": "^7.9.4",
    "@storybook/addon-a11y": "6.0.0-beta.4",
    "@storybook/addon-actions": "6.0.0-beta.4",
    "@storybook/addon-docs": "6.0.0-beta.4",
    "@storybook/addon-essentials": "6.0.0-beta.4",
    "@storybook/addon-storysource": "6.0.0-beta.4",
    "@storybook/react": "6.0.0-beta.4",
    "auto": "^7.11.0",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.1.0",
    "babel-plugin-require-context-hook": "^1.0.0",
    "babel-plugin-styled-components": "^1.10.7",
    "cross-env": "^7.0.2",
    "eslint": "^7.0.0",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-html": "^6.0.2",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jest": "^23.10.0",
    "eslint-plugin-json": "^2.1.1",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^4.0.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.2",
    "prettier": "^2.0.5",
    "prettier-eslint": "^9.0.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "sort-package-json": "^1.42.2"
  },
  "peerDependencies": {
    "prop-types": "^15.5.4",
    "react": "^15.0.0 || ^16.0.0",
    "react-dom": "^15.0.0 || ^16.0.0"
  },
  "engines": {
    "node": ">=8",
    "npm": ">=5"
  },
  "auto": {
    "plugins": [
      "npm",
      "released"
    ]
  },
  "collective": {
    "type": "opencollective",
    "url": "https://opencollective.com/storybook"
  }
}
